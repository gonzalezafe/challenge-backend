{
	"name": "challenge-backend",
	"version": "1.0.0",
	"description": "Se propone la soluci√≥n al challenge dd3 utilizando node js, typescript, jest y postgreSQL",
	"main": "index.js",
	"scripts": {
		"build": "tsc",
		"dev": "nodemon",
		"test": "jest"
	},
	"nodemonConfig": {
		"watch": [
			"src"
		],
		"ext": "ts",
		"exec": "ts-node src/index.ts"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/gonzalezafe/challenge-backend.git"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/gonzalezafe/challenge-backend/issues"
	},
	"homepage": "https://github.com/gonzalezafe/challenge-backend#readme",
	"devDependencies": {
		"@types/dotenv": "^8.2.0",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.4.0",
		"@types/jsonwebtoken": "^9.0.1",
		"@types/node": "^18.15.0",
		"@types/node-cron": "^3.0.7",
		"@types/supertest": "^2.0.12",
		"jest": "^29.5.0",
		"nodemon": "^2.0.21",
		"supertest": "^6.3.3",
		"ts-jest": "^29.0.5",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.5"
	},
	"dependencies": {
		"axios": "^1.3.4",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"fs": "^0.0.1-security",
		"jsonwebtoken": "^9.0.0",
		"node-cron": "^3.0.2",
		"pg": "^8.9.0",
		"reflect-metadata": "^0.1.13",
		"typeorm": "^0.2.45"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"modulePathIgnorePatterns": [
			"build"
		],
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js"
		],
		"transform": {
			"^.+\\.(ts|tsx|js)$": "ts-jest"
		},
		"globals": {
			"ts-jest": {
				"tsConfigFile": "tsconfig.json"
			}
		}
	}
}
